// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  password   String
  Credential Credential[]
  SafeNotes  Notes[]
  Cards      Cards[]

  @@map("users")
}

model Credential {
  id       Int    @id @default(autoincrement())
  user     User   @relation(fields: [userId], references: [id])
  userId   Int
  title    String @unique
  url      String
  username String
  password String

  @@map("credentials")
}

model Notes {
  id     Int    @id @default(autoincrement())
  title  String @unique
  note   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}

model Cards {
  id         Int      @id @default(autoincrement())
  cardNumber Int
  title      String   @unique
  expireDate DateTime
  password   String
  isVirtual  Boolean
  type       String
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
}
